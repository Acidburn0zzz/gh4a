<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress"
        style="?attr/indeterminateProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <com.gh4a.widget.CheckableImageView
            android:id="@+id/plus_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/reactionPlusOneIcon"
            android:padding="16dp" />

        <com.gh4a.widget.CheckableImageView
            android:id="@+id/minus_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/reactionMinusOneIcon"
            android:padding="16dp" />

        <com.gh4a.widget.CheckableImageView
            android:id="@+id/laugh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/reactionLaughIcon"
            android:padding="16dp" />

        <com.gh4a.widget.CheckableImageView
            android:id="@+id/hooray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/reactionHoorayIcon"
            android:padding="16dp" />

        <com.gh4a.widget.CheckableImageView
            android:id="@+id/confused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/reactionConfusedIcon"
            android:padding="16dp" />

        <com.gh4a.widget.CheckableImageView
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/reactionHeartIcon"
            android:padding="16dp" />

    </LinearLayout>

</FrameLayout>